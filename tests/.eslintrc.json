{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "@umbrik/eslint-config-hcm-wt"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": "tsconfig.json",
    "tsconfigRootDir": "tests"
  },
  "plugins": [
    "@typescript-eslint",
    "jsdoc"
  ],
  "rules": {
    "semi": "error"
  }
}
